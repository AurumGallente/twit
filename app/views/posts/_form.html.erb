<div class='form'>
<%= form_for(@post, :remote => true) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    
    <%= f.text_field :title, :class => 'input-block-level', :placeholder => 'title' %>
  </div>


  <div class="field">
    
    <%= f.text_area :body, :class => 'input-block-level', :placeholder => 'enter your message' %>
  </div>
  <div class="field">

    <%= f.text_field :tag_list, :class=>"input-block-level", :placeholder => 'List of tags (coma separated)' %>
  </div>
  <div class="actions">
    <%= f.submit :class=>'btn btn-large btn-block btn-inverse', :value => 'add post' %>
  </div>
<% end %>
</div>